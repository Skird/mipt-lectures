\begin_layout Definition*
Пусть 
\begin_inset Formula $T\in T_{p}^{q}(V),\ p,q\ge1$
\end_inset

.
 Выберем 
\begin_inset Formula $r\le p,\ s\le q$
\end_inset

.
 
\emph on
Сверткой
\emph default
 тензора 
\begin_inset Formula $T$
\end_inset

 по индексам 
\begin_inset Formula $\left(r,s\right)$
\end_inset

 назовем тензор 
\begin_inset Formula 
\[
Tr_{s}^{t}(T)=T_{i_{1},\ldots,i_{r-1},i,i_{r+1},i_{p}}^{j_{1},\ldots,j_{s-1},j,j_{s+1},\ldots,j_{q}}
\]

\end_inset


\end_layout

\begin_layout Claim*
Свертка --- это действительно тензор.
\end_layout

\begin_layout Proof
Положим 
\begin_inset Formula $P=Tr_{r}^{s}(T)$
\end_inset

.
 Рассмотрим, как меняются координаты 
\begin_inset Formula $P$
\end_inset

 при замене базиса.
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
T_{i_{1},\ldots,i_{p}}^{\prime j_{1},\ldots,j_{q}}=s_{i_{1}}^{k_{1}}\cdot\ldots\cdot s_{i_{p}}^{k_{p}}\cdot r_{l_{1}}^{j_{1}}\cdot\ldots\cdot r_{l_{q}}^{j_{q}}\cdot T_{k_{1},\ldots,k_{p}}^{l_{1},\ldots,l_{q}}
\]

\end_inset

Тогда 
\begin_inset Formula 
\begin{multline*}
P_{i_{1},\ldots,i_{r-1},i_{r+1},\ldots,i_{p}}^{\prime j_{1},\ldots,j_{s-1},j_{s+1},\ldots,j_{q}}=T_{i_{1},\ldots,i_{r-1},i_{r+1},\ldots,i_{p}}^{\prime j_{1},\ldots,j_{s-1},j_{s+1},\ldots,j_{q}}=\\
=s_{i_{1}}^{k_{1}}\cdot\ldots s_{i_{r-1}}^{k_{r-1}}\cdot s_{i_{r+1}}^{k_{r+1}}\ldots\cdot s_{i_{p}}^{k_{p}}\cdot r_{l_{1}}^{j_{1}}\cdot\ldots\cdot r_{l_{q-1}}^{j_{q-1}}\cdot r_{l_{q+1}}^{j_{q+1}}\ldots\cdot r_{l_{q}}^{j_{q}}\cdot\underset{=\delta_{l}^{k}}{\underbrace{s_{i}^{k}\cdot r_{l}^{i}}}\cdot T_{k_{1},\ldots,k_{p}}^{l_{1},\ldots,l_{q}}=\\
=\underbrace{s_{i_{1}}^{k_{1}}\cdot\ldots s_{i_{r-1}}^{k_{r-1}}\cdot s_{i_{r+1}}^{k_{r+1}}\ldots\cdot s_{i_{p}}^{k_{p}}}\cdot\underbrace{r_{l_{1}}^{j_{1}}\cdot\ldots\cdot r_{l_{q-1}}^{j_{q-1}}\cdot r_{l_{q+1}}^{j_{q+1}}\ldots\cdot r_{l_{q}}^{j_{q}}}\cdot T_{k_{1},\ldots,k,\ldots,k_{p}}^{l_{1},\ldots,k,\ldots,l_{q}}=P_{k_{1},\ldots,k_{r-1},k_{r+1},\ldots,k_{p}}^{l_{1},\ldots,l_{s-1},l_{s+1},\ldots,l_{q}}
\end{multline*}

\end_inset


\end_layout

\begin_layout Proof
Значит это есть 
\begin_inset Formula $(p-1,q-1)$
\end_inset

-тензор.
\end_layout

