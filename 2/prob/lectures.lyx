\begin_layout Theorem*
(о замене переменных в интеграле Лебега) Пусть 
\begin_inset Formula $\xi$
\end_inset

 --- случайная величина, 
\begin_inset Formula $\varphi$
\end_inset

 --- борелевская функция.
 Тогда 
\begin_inset Formula 
\[
E\varphi(\xi)=\underset{\Omega}{\int}\varphi\left(\xi\left(w\right)\right)P(dw)=\underset{\mathbb{R}}{\int}\varphi(x)\cdot P_{\xi}(dx)
\]

\end_inset


\end_layout

\begin_layout Proof
Пусть 
\begin_inset Formula $B\in\mathcal{B}(\mathbb{R})$
\end_inset

, 
\begin_inset Formula $\varphi=I_{B}$
\end_inset

.
 Тогда 
\begin_inset Formula $E\varphi(\xi)=EI\left(\xi\in B\right)=P\left(\xi\in B\right)$
\end_inset

.
 С другой стороны
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
\underset{\mathbb{R}}{\int}\varphi(x)\cdot P_{\xi}(dx)=E_{P_{\xi}}\varphi=E_{P_{\xi}}I_{B}=P_{\xi}(B)
\]

\end_inset


\end_layout

\begin_layout Proof
Пусть теперь 
\begin_inset Formula $B_{1},\ldots,B_{n}\in\mathcal{B}(\mathbb{R})$
\end_inset

 --- не пересекающиеся, 
\begin_inset Formula $c_{1},\ldots,c_{n}\in\mathbb{R}$
\end_inset

.
 
\begin_inset Formula $\varphi=\underset{i=1}{\overset{n}{\sum}}c_{i}I_{B_{i}}$
\end_inset

 --- простая.
 Тогда
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
E\varphi(\xi)=E\left(\underset{i=1}{\overset{n}{\sum}}c_{i}I\left(\xi\in B_{i}\right)\right)=\underset{i=1}{\overset{n}{\sum}}c_{i}EI\left(\xi\in B_{i}\right)=\underset{i=1}{\overset{n}{\sum}}c_{i}\underset{\mathbb{R}}{\int}I_{B_{i}}\cdot P_{\xi}(dx)
\]

\end_inset


\end_layout

\begin_layout Proof
С другой стороны
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
\underset{\mathbb{R}}{\int}\varphi(x)P_{\xi}(dx)=\underset{\mathbb{R}}{\int}\underset{i=1}{\overset{n}{\sum}}c_{i}I\left(x\in B_{i}\right)P_{\xi}(dx)=\underset{i=1}{\overset{n}{\sum}}c_{i}\underset{\mathbb{R}}{\int}I\left(x\in B_{i}\right)P_{\xi}(dx)
\]

\end_inset


\end_layout

\begin_layout Proof
Пусть теперь 
\begin_inset Formula $\varphi\ge0$
\end_inset

.
 Тогда пусть 
\begin_inset Formula $\varphi_{n}\uparrow\varphi$
\end_inset

 --- простые неотрицательные.
 Тогда 
\begin_inset Formula $\left|\varphi_{n}\right|\le\varphi$
\end_inset

.
 Тогда по теореме Лебега о мажорируемой сходимости
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
E\varphi\left(\xi\right)=\underset{n\rightarrow\infty}{\lim}E\varphi_{n}(\xi)=\underset{n\rightarrow\infty}{\lim}\underset{\mathbb{R}}{\int}\varphi_{n}(x)\cdot P_{\xi}(dx)=\underset{\mathbb{R}}{\int}\underset{n\rightarrow\infty}{\lim}\varphi_{n}(x)\cdot P_{\xi}(dx)=\underset{\mathbb{R}}{\int}\varphi(x)P_{\xi}(dx)
\]

\end_inset


\end_layout

\begin_layout Proof
Пусть теперь 
\begin_inset Formula $\varphi$
\end_inset

 --- произвольная.
 
\begin_inset Formula $\varphi=\varphi^{+}-\varphi^{-}$
\end_inset

.
 Тогда
\end_layout

\begin_layout Proof
\begin_inset Formula 
\begin{multline*}
E\varphi(\xi)=E\left(\varphi^{+}(\xi)-\varphi^{-}(\xi)\right)=E\varphi^{+}(\xi)-E\varphi^{-}(\xi)=\underset{\mathbb{R}}{\int}\varphi^{+}(x)P_{\xi}(dx)-\underset{\mathbb{R}}{\int}\varphi^{-}(x)P_{\xi}(dx)=\\
=\underset{\mathbb{R}}{\int}\left(\varphi^{+}(x)-\varphi^{-}(x)\right)P_{\xi}(dx)=\underset{\mathbb{R}}{\int}\varphi(x)P_{\xi}(dx)
\end{multline*}

\end_inset


\end_layout

\begin_layout Example*
\begin_inset Formula $ $
\end_inset


\end_layout

\begin_layout Example*
(1) 
\begin_inset Formula $\xi\sim N(0,1)$
\end_inset

.
 
\begin_inset Formula $\varphi(x)=x^{2}$
\end_inset

.
 Тогда 
\begin_inset Formula 
\begin{multline*}
E\varphi(\xi)=E\xi^{2}=\underset{\mathbb{R}}{\int}x^{2}P_{\xi}(dx)=\underset{\mathbb{R}}{\int}x^{2}\cdot P_{\xi}(x)\cdot dx=\underset{\mathbb{R}}{\int}\frac{x^{2}}{\sqrt{2\pi}}\exp\left(-\frac{x^{2}}{2}\right)\cdot dx=\\
=-\underset{\mathbb{R}}{\int}\frac{x}{\sqrt{2\pi}}d\left(\exp\left(-\frac{x^{2}}{2}\right)\right)=-\frac{x}{\sqrt{2\pi}}\cdot\exp\left(-\frac{x^{2}}{2}\right)\Biggl|_{-\infty}^{+\infty}+\underset{\mathbb{R}}{\int}\frac{\exp\left(-\frac{x^{2}}{2}\right)}{\sqrt{2\pi}}\cdot dx=-\left(0-0\right)+1=1
\end{multline*}

\end_inset


\end_layout

\begin_layout Example*
(2) 
\begin_inset Formula $\xi\sim\exp\left(3\right),\ \varphi(x)=e^{x}$
\end_inset


\end_layout

\begin_layout Example*
\begin_inset Formula 
