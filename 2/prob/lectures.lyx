\begin_layout Section
Дисперсия и ковариация
\end_layout

\begin_layout Definition*

\emph on
Дисперсия
\emph default
 случайной величины 
\begin_inset Formula $\xi$
\end_inset

 определяется как 
\begin_inset Formula $D\xi=E\left(\xi-E\xi\right)^{2}$
\end_inset

.
\end_layout

\begin_layout Claim*
\begin_inset Formula $D\xi=E\left(\xi^{2}\right)-\left(E\xi\right)^{2}$
\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula $D\xi=E\left(\xi-E\xi\right)^{2}=E\left(\xi^{2}-2\xi E\xi+\left(E\xi\right)^{2}\right)=E\xi^{2}-E\left(2\xi\cdot E\xi\right)+\left(E\xi\right)^{2}=E\xi^{2}-2\left(E\xi\right)^{2}+\left(E\xi\right)^{2}=E\xi^{2}-\left(E\xi\right)^{2}$
\end_inset


\end_layout

\begin_layout Example*
Если 
\begin_inset Formula $\xi\sim N(0,1)\Rightarrow D\xi=1$
\end_inset

.
\end_layout

\begin_layout Lemma*
\begin_inset Formula $D\xi\ge0$
\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula $D\xi=E\left(\xi-E\xi\right)^{2}$
\end_inset

.
 
\begin_inset Formula $\left(\xi-E\xi\right)^{2}\ge0\Rightarrow D\xi\ge0$
\end_inset


\end_layout

\begin_layout Lemma*
\begin_inset Formula $D\xi=0\Leftrightarrow\exists c:\ P\left(\xi=c\right)=1$
\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula $ $
\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula $\Rightarrow$
\end_inset

.
 
\begin_inset Formula $D\xi=0\Rightarrow E\left(\xi-E\xi\right)^{2}=0\Rightarrow P\left(\xi-E\xi=0\right)=1\Rightarrow P\left(\xi=E\xi\right)=1$
\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula $\Leftarrow$
\end_inset

.
 
\begin_inset Formula $P\left(\xi=c\right)=1\Rightarrow D\xi=E\left(\xi-E\xi\right)^{2}=E\left(\xi-c\right)^{2}=0\Rightarrow D\xi=0$
\end_inset


\end_layout

\begin_layout Definition*

\emph on
Ковариацией
\emph default
 случайных величин 
\begin_inset Formula $\xi$
\end_inset

 и 
\begin_inset Formula $\eta$
\end_inset

 называется 
\begin_inset Formula 
\[
cov\left(\xi,\eta\right)=E\left(\left(\xi-E\xi\right)\left(\eta-E\eta\right)\right)
\]

\end_inset


\end_layout

\begin_layout Remark*
\begin_inset Formula $D\xi=cov\left(\xi,\xi\right)$
\end_inset


\end_layout

\begin_layout Definition*

\emph on
Коэффициентом корреляции 
\emph default
величин 
\begin_inset Formula $\xi$
\end_inset

 и 
\begin_inset Formula $\eta$
\end_inset

 называется 
\begin_inset Formula $\rho\left(\xi,\eta\right)=\frac{cov\left(\xi,\eta\right)}{\sqrt{D\xi D\eta}}$
