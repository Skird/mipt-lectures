\begin_layout Lemma*
(Билинейность ковариации) 
\begin_inset Formula $cov\left(a_{1}\xi_{1}+a_{2}\xi_{2},\eta\right)=a_{1}cov\left(\xi_{1},\eta\right)+a_{2}cov\left(\xi_{2},\eta\right)$
\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula 
\begin{multline*}
cov\left(a_{1}\xi_{1}+a_{2}\xi_{2},\eta\right)=E\left(\left(a_{1}\xi_{1}+a_{2}\xi_{2}\right)\eta\right)-E\left(a_{1}\xi_{1}+a_{2}\xi_{2}\right)E\eta=\\
=a_{1}E\xi_{1}\eta+a_{2}E\xi_{2}\eta-a_{1}E\xi_{1}E\eta-a_{2}E\xi_{2}\eta=a_{1}cov\left(\xi_{1},\eta\right)+a_{2}cov\left(\xi_{2},\eta\right)
\end{multline*}

\end_inset


\end_layout

\begin_layout Lemma*
\begin_inset Formula $D\left(\xi_{1}+\ldots+\xi_{n}\right)=\underset{i=1}{\overset{n}{\sum}}\underset{j=1}{\overset{n}{\sum}}cov\left(\xi_{i},\xi_{j}\right)=\underset{i=1}{\overset{n}{\sum}}D\xi_{i}+\underset{i\ne j}{\sum}cov\left(\xi_{i},\xi_{j}\right)$
\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula $D\left(\xi_{1}+\ldots+\xi_{n}\right)=cov\left(\xi_{1}+\ldots+\xi_{n},\xi_{1}+\ldots+\xi_{n}\right)=\underset{i=1}{\overset{n}{\sum}}\underset{j=1}{\overset{n}{\sum}}cov\left(\xi_{i},\xi_{j}\right)$
\end_inset


\end_layout

