\begin_layout Theorem*
(неравенство Колмогорова) Пусть 
\begin_inset Formula $\xi_{1},\ldots,\xi_{n}$
\end_inset

 --- независимые случайные величины, 
\begin_inset Formula $E\xi_{i}=0$
\end_inset

 и 
\begin_inset Formula $E\xi_{i}^{2}<\infty$
\end_inset

.
 Тогда
\end_layout

\begin_layout Theorem*
(1) 
\begin_inset Formula $P\left(\underset{1\le k\le n}{\max}\left|S_{k}\right|\ge\varepsilon\right)\le\frac{ES_{n}^{2}}{\varepsilon^{2}}$
\end_inset


\end_layout

\begin_layout Theorem*
(2) Если дополнительно 
\begin_inset Formula $\exists c>0:\ \forall i\rightarrow P\left(\left|\xi_{i}\right|<c\right)=1$
\end_inset

, то 
\begin_inset Formula $P\left(\underset{1\le k\le n}{\max}\left|S_{k}\right|\ge\varepsilon\right)\ge1-\frac{\left(c+\varepsilon\right)^{2}}{ES_{n}^{2}}$
\end_inset


\end_layout

\begin_layout Proof
Рассмотрим 
\begin_inset Formula $A_{k}=\left\{ \omega:\ \left|S_{1}(\omega)\right|<\varepsilon,\ldots,\left|S_{k-1}(\omega)\right|<\varepsilon,\left|S_{k}(\omega)\right|\ge\varepsilon\right\} $
\end_inset

, а также 
\begin_inset Formula $A=\left\{ \omega:\ \underset{1\le k\le n}{\max}\left|S_{k}(\omega)\right|\ge\varepsilon\right\} $
\end_inset

.
 Очевидно, 
\begin_inset Formula $A=\underset{i=1}{\overset{n}{\bigsqcup}}A_{k}$
\end_inset

.
 
\begin_inset Formula 
\begin{multline*}
(1)\ ES_{n}^{2}=ES_{n}^{2}I_{A}+ES_{n}^{2}I_{\overline{A}}\ge ES_{n}^{2}I_{A}=E\left(S_{n}^{2}\underset{k=1}{\overset{n}{\sum}}I_{A_{k}}\right)=\underset{k=1}{\overset{n}{\sum}}ES_{n}^{2}I_{A_{k}}=\\
=\underset{k=1}{\overset{n}{\sum}}E\left(\left(S_{n}-S_{k}\right)+S_{k}\right)^{2}I_{A_{k}}=\underset{k=1}{\overset{n}{\sum}}\left(E\left(S_{n}-S_{k}\right)^{2}I_{A_{k}}+2E\underset{\xi_{k+1}+\ldots+\xi_{n}}{\underbrace{\left(S_{n}-S_{k}\right)}}\underset{\xi_{1}+\ldots\xi_{k}}{\underbrace{S_{k}I_{A_{k}}}}+ES_{k}^{2}I_{A_{k}}\right)=\\
=\underset{k=1}{\overset{n}{\sum}}\left(E\left(S_{n}-S_{k}\right)^{2}I_{A_{k}}+2E\left(S_{n}-S_{k}\right)\cdot ES_{k}I_{A_{k}}+ES_{k}^{2}I_{A_{k}}\right)=\\
=\underset{k=1}{\overset{n}{\sum}}\left(E\left(S_{n}-S_{k}\right)^{2}I_{A_{k}}+ES_{k}^{2}I_{A_{k}}\right)\ge\underset{k=1}{\overset{n}{\sum}}ES_{k}^{2}IA_{k}\ge\\
\ge\varepsilon^{2}\underset{k=1}{\overset{n}{\sum}}EI_{A_{k}}=\varepsilon^{2}EI_{A}=\varepsilon^{2}P(A)\Rightarrow P(A)\le\frac{ES_{n}^{2}}{\varepsilon^{2}}
\end{multline*}

\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula 
\begin{multline*}
(2)\ ES_{n}^{2}=ES_{n}^{2}I_{A}+ES_{n}^{2}I_{\overline{A}}\le ES_{n}^{2}I_{A}+\varepsilon^{2}EI_{\overline{A}}=\underset{k=1}{\overset{n}{\sum}}E\left(\left(S_{n}-S_{k}\right)+S_{k}\right)^{2}I_{A_{k}}+\varepsilon^{2}(1-P(A))\le\\
\le\underset{k=1}{\overset{n}{\sum}}E\left(S_{n}-S_{k}\right)^{2}EI_{A_{k}}+\underset{k=1}{\overset{n}{\sum}}ES_{k}^{2}I_{A_{k}}+\varepsilon^{2}\left(1-P(A)\right)
\end{multline*}

\end_inset


\end_layout

\begin_layout Proof
Так как 
\begin_inset Formula $\left|S_{k}\right|=\left|S_{k-1}+\xi_{k}\right|\le\left|S_{k-1}\right|+\left|\xi_{k}\right|\le c+\varepsilon$
\end_inset

, то продолжаем
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
\le\left(\varepsilon+c\right)^{2}\underset{k=1}{\overset{n}{\sum}}I_{A_{k}}+\varepsilon^{2}\left(1-P(A)\right)+\underset{k=1}{\overset{n}{\sum}}E\left(\xi_{k+1}+\ldots+\xi_{n}\right)^{2}EI_{A_{k}}
\]

\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula $E\left(\xi_{k+1}+\ldots+\xi_{n}\right)^{2}=\underset{j=k+1}{\overset{n}{\sum}}E\xi_{j}^{2}+2\underset{i,j}{\sum}E\xi_{i}\xi_{j}\le\underset{j=1}{\overset{n}{\sum}}E\xi_{j}^{2}=ES_{n}^{2}$
\end_inset

.
 Тогда можем продолжить:
\end_layout

\begin_layout Proof
\begin_inset Formula $P(A)\left(ES_{n}^{2}+c^{2}+2\varepsilon c\right)\ge ES_{n}^{2}-\varepsilon^{2}\Rightarrow P(A)\ge1-\frac{\left(\varepsilon+c\right)^{2}}{ES_{n}^{2}+c^{2}+2\varepsilon c}\ge1-\frac{\left(c+\varepsilon\right)^{2}}{ES_{n}^{2}}$
\end_inset

, что и требовалось.
\end_layout

